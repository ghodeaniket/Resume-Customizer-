# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/resume_customizer

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# AWS S3
AWS_BUCKET_NAME=resume-customizer-bucket
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# N8N
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_WEBHOOK_PATH=customize-resume-ai

# Redis (for Bull queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Public URL
PUBLIC_URL=http://localhost:3000

# Customization defaults
CUSTOMIZATION_TIMEOUT_MS=120000
CUSTOMIZATION_MAX_RETRIES=3

# Service configuration
MOCK_SERVICES=false
FALLBACK_TO_MOCK=false